-- 功能實作
local function updateStatus()
    local active = {}
    if toggles.autoAttack then table.insert(active, "攻擊中") end
    if toggles.helpTarget then table.insert(active, "幫助中") end
    
    if #active > 0 then
        statusLabel.Text = "✅ " .. table.concat(active, " | ")
        statusLabel.BackgroundColor3 = Color3.fromRGB(18, 40, 18)
        statusLabel.TextColor3 = Color3.fromRGB(80, 200, 80)
    else
        statusLabel.Text = "系統就緒"
        statusLabel.BackgroundColor3 = Color3.fromRGB(45, 18, 18)
        statusLabel.TextColor3 = Color3.fromRGB(220, 80, 80)
    end
end

local function toggleUIState(btn, frame, input, isActive)
    if isActive then
        btn.Text = "解除"
        btn.BackgroundColor3 = Color3.fromRGB(244, 67, 54)
        frame.BackgroundColor3 = Color3.fromRGB(20, 30, 55)
        if input and input:IsA("TextBox") then input.TextEditable = false end
    else
        btn.Text = "啟動"
        btn.BackgroundColor3 = Color3.fromRGB(76, 175, 80)
        frame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
        if input and input:IsA("TextBox") then input.TextEditable = true end
    end
    updateStatus()
end

-- ============================================================
-- 自動攻擊（雜技演員版）
-- 每次攻擊：先 Roll:FireServer()，再 AcHit:FireServer(目標.Torso)
-- ============================================================
autoAttackButton.MouseButton1Click:Connect(function()
    toggles.autoAttack = not toggles.autoAttack
    
    if toggles.autoAttack then
        autoAttackStatus.Text = "運行中"
        autoAttackStatus.TextColor3 = Color3.fromRGB(46, 125, 50)
        
        local lastAttackTime = 0
        
        connections.autoAttack = RunService.Heartbeat:Connect(function()
            local now = tick()
            if (now - lastAttackTime) < values.attackInterval then return end
            
            local char = player.Character
            if not char or not char:FindFirstChild("HumanoidRootPart") then return end
            
            local myPos = char.HumanoidRootPart.Position
            local nearestTarget = nil
            local minDist = math.huge
            
            -- 尋找距離內最近的其他玩家
            for _, targetPlayer in pairs(Players:GetPlayers()) do
                if targetPlayer ~= player and targetPlayer.Character and 
                   targetPlayer.Character:FindFirstChild("HumanoidRootPart") and
                   targetPlayer.Character:FindFirstChild("Torso") then
                    local dist = (targetPlayer.Character.HumanoidRootPart.Position - myPos).Magnitude
                    if dist < minDist and dist <= values.attackDistance then
                        minDist = dist
                        nearestTarget = targetPlayer
                    end
                end
            end
            
            if nearestTarget then
                lastAttackTime = now
                pcall(function()
                    -- 先翻滾
                    ReplicatedStorage.Roll:FireServer()
                end)
                pcall(function()
                    -- 再打擊目標的 Torso
                    local torso = nearestTarget.Character:FindFirstChild("Torso")
                    if torso then
                        ReplicatedStorage.AcHit:FireServer(torso)
                    end
                end)
            end
        end)
    else
        autoAttackStatus.Text = "關閉"
        autoAttackStatus.TextColor3 = Color3.fromRGB(150, 150, 150)
        if connections.autoAttack then
            connections.autoAttack:Disconnect()
            connections.autoAttack = nil
        end
    end
    
    toggleUIState(autoAttackButton, autoAttackFrame, autoAttackStatus, toggles.autoAttack)
end)

-- 攻擊間隔
attackIntervalInput.FocusLost:Connect(function()
    local val = tonumber(attackIntervalInput.Text)
    if val and val > 0 then
        values.attackInterval = val
    else
        attackIntervalInput.Text = tostring(values.attackInterval)
    end
end)

-- 攻擊距離
attackDistanceInput.FocusLost:Connect(function()
    local val = tonumber(attackDistanceInput.Text)
    if val and val > 0 then
        values.attackDistance = val
    else
        attackDistanceInput.Text = tostring(values.attackDistance)
    end
end)

-- 跳躍力
jumpPowerButton.MouseButton1Click:Connect(function()
    toggles.jumpPower = not toggles.jumpPower
    
    if toggles.jumpPower then
        getOriginalJumpPower()
        values.jumpPower = tonumber(jumpPowerInput.Text) or 50
        
        local function applyJumpPower()
            local char = player.Character
            if char then
                local hum = char:FindFirstChildOfClass("Humanoid")
                if hum then
                    if hum.UseJumpPower then
                        hum.JumpPower = values.jumpPower
                    else
                        hum.JumpHeight = values.jumpPower
                    end
                end
            end
        end
        
        applyJumpPower()
        
        connections.jumpPower = RunService.Heartbeat:Connect(function()
            if toggles.jumpPower then
                applyJumpPower()
            end
        end)
    else
        if connections.jumpPower then
            connections.jumpPower:Disconnect()
            connections.jumpPower = nil
        end
        
        local char = player.Character
        if char then
            local hum = char:FindFirstChildOfClass("Humanoid")
            if hum then
                if hum.UseJumpPower then
                    hum.JumpPower = originalJumpPower
                else
                    hum.JumpHeight = originalJumpPower
                end
            end
        end
    end
    
    toggleUIState(jumpPowerButton, jumpPowerFrame, jumpPowerInput, toggles.jumpPower)
end)

-- 幫助模式切換
helpModeButton.MouseButton1Click:Connect(function()
    if values.helpMode == "被打後重置" then
        values.helpMode = "被打後不重置"
    else
        values.helpMode = "被打後重置"
    end
    helpModeButton.Text = values.helpMode
end)


-- ============================================================
-- 幫助目標邏輯
-- 修復：「被打後不重置」模式下，被打後不會再走回傳送到 Teleport1 的流程
-- 修復原因：原版外層 while 在 break 後繼續迭代，重新執行 Teleport1 傳送
-- 解決方式：用 alreadyPositioned 旗標，進入固定/跟隨循環後永不再傳送
-- ============================================================
helpTargetButton.MouseButton1Click:Connect(function()
    toggles.helpTarget = not toggles.helpTarget
    
    if toggles.helpTarget then
        local targetPlayer, errorMsg = findPlayerByPartialName(helpTargetInput.Text)
        
        if not targetPlayer then
            helpTargetInfo.Text = errorMsg or "找不到玩家"
            helpTargetInfo.TextColor3 = Color3.fromRGB(200, 0, 0)
            toggles.helpTarget = false
            return
        end
        
        values.targetPlayer = targetPlayer
        helpTargetInfo.Text = "目標: " .. targetPlayer.Name
        helpTargetInfo.TextColor3 = Color3.fromRGB(46, 125, 50)
        
        connections.helpTarget = task.spawn(function()
            
            -- 旗標：是否已完成初始定位（進入固定或跟隨循環）
            -- 一旦設為 true，外層 while 不再執行傳送及定位流程
            local alreadyPositioned = false
            
            while toggles.helpTarget do
                -- 如果已定位完成，只需等待直到 helpTarget 被關閉
                if alreadyPositioned then
                    task.wait(0.5)
                    continue
                end
                
                local character = player.Character
                if not character then
                    character = player.CharacterAdded:Wait()
                end
                
                local humanoidRootPart = character:WaitForChild("HumanoidRootPart", 10)
                local humanoid = character:WaitForChild("Humanoid", 10)
                
                if not humanoidRootPart or not humanoid then
                    task.wait(0.5)
                    continue
                end
                
                if humanoid.Health <= 0 then
                    task.wait(0.3)
                    continue
                end
                
                pcall(function()
                    -- 傳送到 Lobby.Teleport1（僅在尚未定位時執行）
                    local teleport1 = Workspace.Lobby:FindFirstChild("Teleport1")
                    if teleport1 and toggles.helpTarget then
                        humanoidRootPart.CFrame = teleport1.CFrame
                        task.wait(0.5)
                    end
                    
                    local tgtPlayer = values.targetPlayer
                    if not (tgtPlayer and tgtPlayer.Character and tgtPlayer.Character:FindFirstChild("HumanoidRootPart")) then
                        return
                    end
                    
                    if not toggles.helpTarget then return end
                    
                    local playerWorkspaceFolder = Workspace:FindFirstChild(player.Name)
                    
                    if values.helpMode == "被打後重置" then
                        -- --------------------------------------------------------
                        -- 重置模式：被打 → 傳到固定點 → 自殺重置 → 重新定位
                        -- 這個模式被打後需要重新執行整個流程，所以 alreadyPositioned 保持 false
                        -- --------------------------------------------------------
                        
                        -- 先移動到目標前方
                        pcall(function()
                            local targetRoot = tgtPlayer.Character.HumanoidRootPart
                            local lookDir = targetRoot.CFrame.LookVector
                            local newPos = targetRoot.Position + (lookDir * values.helpDistance)
                            local newCFrame = CFrame.new(newPos, newPos + lookDir)
                            humanoidRootPart.CFrame = newCFrame
                            if toggles.fixedPosition then
                                values.fixedCFrame = newCFrame
                            end
                        end)
                        
                        -- 固定或跟隨，直到被打
                        local wasHit = false
                        while toggles.helpTarget and humanoid.Health > 0 and not wasHit do
                            -- 檢查是否被目標打
                            if playerWorkspaceFolder then
                                local lastSlappedBy = playerWorkspaceFolder:FindFirstChild("LastSlappedBy")
                                if lastSlappedBy and lastSlappedBy.Value == tgtPlayer.Name then
                                    wasHit = true
                                    break
                                end
                            end
                            
                            pcall(function()
                                if toggles.fixedPosition and values.fixedCFrame then
                                    local state = humanoid:GetState()
                                    if state ~= Enum.HumanoidStateType.Ragdoll and
                                       state ~= Enum.HumanoidStateType.FallingDown and
                                       state ~= Enum.HumanoidStateType.Physics then
                                        humanoidRootPart.CFrame = values.fixedCFrame
                                    end
                                elseif not toggles.fixedPosition then
                                    local targetRoot = tgtPlayer.Character and tgtPlayer.Character:FindFirstChild("HumanoidRootPart")
                                    if targetRoot then
                                        local lookDir = targetRoot.CFrame.LookVector
                                        local newPos = targetRoot.Position + (lookDir * values.helpDistance)
                                        humanoidRootPart.CFrame = CFrame.new(newPos, newPos + lookDir)
                                    end
                                end
                            end)
                            task.wait(0.1)
                        end
                        
                        if wasHit and toggles.helpTarget then
                            task.wait(0.5)
                            
                            -- 傳到安全座標再自殺重置
                            pcall(function()
                                if humanoidRootPart and humanoidRootPart.Parent then
                                    humanoidRootPart.CFrame = CFrame.new(263, 13, 197)
                                end
                            end)
                            task.wait(0.2)
                            pcall(function()
                                if player.Character and player.Character:FindFirstChild("Humanoid") then
                                    player.Character.Humanoid:TakeDamage(player.Character.Humanoid.MaxHealth)
                                end
                            end)
                            
                            -- 等待死亡
                            local t0 = tick()
                            repeat task.wait(0.2)
                            until not player.Character or player.Character.Humanoid.Health <= 0 or tick()-t0 > 3
                            
                            -- 等待新角色
                            local newCharacter = nil
                            local t1 = tick()
                            repeat
                                task.wait(0.2)
                                newCharacter = player.Character
                            until (newCharacter and newCharacter:FindFirstChild("HumanoidRootPart") and
                                  newCharacter:FindFirstChild("Humanoid") and newCharacter.Humanoid.Health > 0)
                                  or tick()-t1 > 5
                            
                            -- alreadyPositioned 保持 false，讓外層 while 重新跑完整流程（含 Teleport1 傳送）
                        end
                        
                    else
                        -- --------------------------------------------------------
                        -- 不重置模式：被打後繼續待在原位（固定）或繼續跟隨
                        -- 關鍵修復：進入此循環後設 alreadyPositioned = true
                        --           讓外層 while 不再重新傳送到 Teleport1
                        -- --------------------------------------------------------
                        
                        -- 初始定位到目標前方
                        pcall(function()
                            local targetRoot = tgtPlayer.Character.HumanoidRootPart
                            local lookDir = targetRoot.CFrame.LookVector
                            local newPos = targetRoot.Position + (lookDir * values.helpDistance)
                            local newCFrame = CFrame.new(newPos, newPos + lookDir)
                            humanoidRootPart.CFrame = newCFrame
                            values.fixedCFrame = newCFrame  -- 記錄初始固定位置
                        end)
                        
                        -- 標記已定位，外層迴圈不再重新傳送
                        alreadyPositioned = true
                        
                        -- 永久固定或跟隨循環（直到手動解除）
                        while toggles.helpTarget do
                            pcall(function()
                                if not (humanoidRootPart and humanoidRootPart.Parent) then return end
                                
                                local state = humanoid:GetState()
                                local isRagdoll = (state == Enum.HumanoidStateType.Ragdoll or
                                                   state == Enum.HumanoidStateType.FallingDown or
                                                   state == Enum.HumanoidStateType.Physics)
                                
                                if toggles.fixedPosition then
                                    -- 固定模式：ragdoll 時不強制固定，避免抖動
                                    -- 被打飛後 ragdoll 結束，會回到 fixedCFrame
                                    if not isRagdoll and values.fixedCFrame then
                                        humanoidRootPart.CFrame = values.fixedCFrame
                                    end
                                else
                                    -- 跟隨模式：持續跟到目標前方
                                    local targetRoot = tgtPlayer.Character and tgtPlayer.Character:FindFirstChild("HumanoidRootPart")
                                    if targetRoot then
                                        local lookDir = targetRoot.CFrame.LookVector
                                        local newPos = targetRoot.Position + (lookDir * values.helpDistance)
                                        humanoidRootPart.CFrame = CFrame.new(newPos, newPos + lookDir)
                                    end
                                end
                            end)
                            task.wait(0.1)
                        end
                    end
                end)
                
                -- 被打後重置模式才會走到這裡繼續迭代
                -- 不重置模式因為 alreadyPositioned = true 會在頂部 continue
                if toggles.helpTarget and not alreadyPositioned then
                    task.wait(0.5)
                end
            end
        end)
    else
        helpTargetInfo.Text = "目標: 無"
        helpTargetInfo.TextColor3 = Color3.fromRGB(140, 140, 140)
        values.targetPlayer = nil
        
        if connections.helpTarget then
            task.cancel(connections.helpTarget)
            connections.helpTarget = nil
        end
    end
    
    toggleUIState(helpTargetButton, helpTargetFrame, helpTargetInput, toggles.helpTarget)
end)

-- 設定距離
helpDistanceInput.FocusLost:Connect(function()
    local val = tonumber(helpDistanceInput.Text)
    if val and val > 0 then
        values.helpDistance = val
    else
        helpDistanceInput.Text = tostring(values.helpDistance)
    end
end)

-- 傳送後固定 (預設開啟)
fixedPositionButton.MouseButton1Click:Connect(function()
    toggles.fixedPosition = not toggles.fixedPosition
    
    if toggles.fixedPosition then
        fixedPositionStatus.Text = "啟用"
        fixedPositionStatus.TextColor3 = Color3.fromRGB(46, 125, 50)
    else
        fixedPositionStatus.Text = "關閉"
        fixedPositionStatus.TextColor3 = Color3.fromRGB(150, 150, 150)
    end
    
    toggleUIState(fixedPositionButton, fixedPositionFrame, fixedPositionStatus, toggles.fixedPosition)
end)

-- 初始化固定位置按鈕為開啟狀態
fixedPositionStatus.Text = "啟用"
fixedPositionStatus.TextColor3 = Color3.fromRGB(46, 125, 50)
toggleUIState(fixedPositionButton, fixedPositionFrame, fixedPositionStatus, true)

-- 拖曳功能
local function enableDrag(frame, dragHandle)
    local dragging = false
    local dragInput, dragStart, startPos
    
    local function update(input)
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(
            startPos.X.Scale, startPos.X.Offset + delta.X,
            startPos.Y.Scale, startPos.Y.Offset + delta.Y
        )
    end
    
    dragHandle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    dragHandle.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or 
           input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)
end

enableDrag(mainFrame, titleBar)

