-- 功能實作
local function updateStatus()
    local active = {}
    if toggles.autoAttack then table.insert(active, "攻擊中") end
    if toggles.helpTarget then table.insert(active, "幫助中") end
    if toggles.respawnTeleport then table.insert(active, "回場監控") end
    
    if #active > 0 then
        statusLabel.Text = "✅ " .. table.concat(active, " | ")
        statusLabel.BackgroundColor3 = Color3.fromRGB(232, 245, 233)
        statusLabel.TextColor3 = Color3.fromRGB(46, 125, 50)
    else
        statusLabel.Text = "系統就緒"
        statusLabel.BackgroundColor3 = Color3.fromRGB(255, 235, 238)
        statusLabel.TextColor3 = Color3.fromRGB(198, 40, 40)
    end
end

local function toggleUIState(btn, frame, input, isActive)
    if isActive then
        btn.Text = "解除"
        btn.BackgroundColor3 = Color3.fromRGB(244, 67, 54)
        frame.BackgroundColor3 = Color3.fromRGB(227, 242, 253)
        if input and input:IsA("TextBox") then input.TextEditable = false end
    else
        btn.Text = "啟動"
        btn.BackgroundColor3 = Color3.fromRGB(76, 175, 80)
        frame.BackgroundColor3 = Color3.fromRGB(248, 249, 250)
        if input and input:IsA("TextBox") then input.TextEditable = true end
    end
    updateStatus()
end

-- 自動攻擊 (完整版: 邊跳邊打模式 - 使用真實跳躍)
autoAttackButton.MouseButton1Click:Connect(function()
    toggles.autoAttack = not toggles.autoAttack
    
    if toggles.autoAttack then
        autoAttackStatus.Text = "運行中"
        autoAttackStatus.TextColor3 = Color3.fromRGB(46, 125, 50)
        
        local lastJumpTime = 0
        local lastAttackTime = 0
        local jumpCooldown = 1.0
        local isJumping = false
        
        connections.autoAttack = RunService.Heartbeat:Connect(function()
            local target = getNearestPlayer()
            if target and target.Character then
                local torso = target.Character:FindFirstChild("Torso")
                if torso then
                    local now = tick()
                    local char = player.Character
                    
                    if char then
                        local hum = char:FindFirstChildOfClass("Humanoid")
                        local hrp = char:FindFirstChild("HumanoidRootPart")
                        
                        if hum and hrp then
                            local currentState = hum:GetState()
                            
                            -- 計算與目標的距離
                            local distance = (hrp.Position - torso.Position).Magnitude
                            
                            -- 檢測跳躍狀態
                            if currentState == Enum.HumanoidStateType.Jumping 
                               or currentState == Enum.HumanoidStateType.Freefall then
                                isJumping = true
                            end
                            
                            -- 落地後重置狀態
                            if currentState == Enum.HumanoidStateType.Landed 
                               or currentState == Enum.HumanoidStateType.Running 
                               or currentState == Enum.HumanoidStateType.RunningNoPhysics then
                                isJumping = false
                            end
                            
                            -- 跳躍邏輯: 在地面且冷卻完成
                            if not isJumping 
                               and isOnGround() 
                               and (now - lastJumpTime) >= jumpCooldown then
                                hum.Jump = true
                                lastJumpTime = now
                            end
                            
                            -- 攻擊邏輯: 按攻擊間隔持續攻擊
                            if distance <= values.attackDistance 
                               and (now - lastAttackTime) >= values.attackInterval then
                                pcall(function()
                                    ReplicatedStorage.springhit:FireServer(torso)
                                end)
                                lastAttackTime = now
                            end
                        end
                    end
                end
            end
        end)
    else
        autoAttackStatus.Text = "關閉"
        autoAttackStatus.TextColor3 = Color3.fromRGB(150, 150, 150)
        if connections.autoAttack then
            connections.autoAttack:Disconnect()
            connections.autoAttack = nil
        end
    end
    
    toggleUIState(autoAttackButton, autoAttackFrame, autoAttackStatus, toggles.autoAttack)
end)

-- 攻擊間隔
attackIntervalInput.FocusLost:Connect(function()
    local val = tonumber(attackIntervalInput.Text)
    if val and val > 0 then
        values.attackInterval = val
    else
        attackIntervalInput.Text = tostring(values.attackInterval)
    end
end)

-- 跳躍力
jumpPowerButton.MouseButton1Click:Connect(function()
    toggles.jumpPower = not toggles.jumpPower
    
    if toggles.jumpPower then
        getOriginalJumpPower()
        values.jumpPower = tonumber(jumpPowerInput.Text) or 50
        
        local function applyJumpPower()
            local char = player.Character
            if char then
                local hum = char:FindFirstChildOfClass("Humanoid")
                if hum then
                    if hum.UseJumpPower then
                        hum.JumpPower = values.jumpPower
                    else
                        hum.JumpHeight = values.jumpPower
                    end
                end
            end
        end
        
        applyJumpPower()
        
        connections.jumpPower = RunService.Heartbeat:Connect(function()
            if toggles.jumpPower then
                applyJumpPower()
            end
        end)
    else
        if connections.jumpPower then
            connections.jumpPower:Disconnect()
            connections.jumpPower = nil
        end
        
        local char = player.Character
        if char then
            local hum = char:FindFirstChildOfClass("Humanoid")
            if hum then
                if hum.UseJumpPower then
                    hum.JumpPower = originalJumpPower
                else
                    hum.JumpHeight = originalJumpPower
                end
            end
        end
    end
    
    toggleUIState(jumpPowerButton, jumpPowerFrame, jumpPowerInput, toggles.jumpPower)
end)

-- 攻擊距離
attackDistanceInput.FocusLost:Connect(function()
    local val = tonumber(attackDistanceInput.Text)
    if val and val > 0 then
        values.attackDistance = val
    else
        attackDistanceInput.Text = tostring(values.attackDistance)
    end
end)

-- 幫助目標
helpTargetButton.MouseButton1Click:Connect(function()
    toggles.helpTarget = not toggles.helpTarget
    
    if toggles.helpTarget then
        local targetPlayer, errorMsg = findPlayerByPartialName(helpTargetInput.Text)
        
        if not targetPlayer then
            helpTargetInfo.Text = errorMsg or "找不到玩家"
            helpTargetInfo.TextColor3 = Color3.fromRGB(200, 0, 0)
            toggles.helpTarget = false
            return
        end
        
        values.targetPlayer = targetPlayer
        helpTargetInfo.Text = "目標: " .. targetPlayer.Name
        helpTargetInfo.TextColor3 = Color3.fromRGB(46, 125, 50)
        
        -- 先傳送到 Lobby
        teleportToLobby()
        
        -- 等待1秒後傳送到目標位置
        task.wait(1)
        
        -- 獲取目標位置並傳送
        local targetCFrame = getPositionInFrontOfPlayer(values.targetPlayer, values.helpDistance)
        if targetCFrame then
            local myChar = player.Character
            if myChar and myChar:FindFirstChild("HumanoidRootPart") then
                myChar.HumanoidRootPart.CFrame = targetCFrame
                
                -- 如果開啟固定模式,記錄當前位置
                if toggles.fixedPosition then
                    values.fixedCFrame = targetCFrame
                    
                    -- 建立固定位置的連接
                    connections.helpTarget = RunService.Heartbeat:Connect(function()
                        if not toggles.helpTarget then return end
                        
                        local myChar = player.Character
                        if myChar and myChar:FindFirstChild("HumanoidRootPart") and values.fixedCFrame then
                            myChar.HumanoidRootPart.CFrame = values.fixedCFrame
                        end
                    end)
                else
                    -- 非固定模式,跟隨目標移動
                    connections.helpTarget = RunService.Heartbeat:Connect(function()
                        if not toggles.helpTarget or not values.targetPlayer then return end
                        
                        local myChar = player.Character
                        if not myChar or not myChar:FindFirstChild("HumanoidRootPart") then return end
                        
                        local targetCFrame = getPositionInFrontOfPlayer(values.targetPlayer, values.helpDistance)
                        if targetCFrame then
                            myChar.HumanoidRootPart.CFrame = targetCFrame
                        end
                    end)
                end
            end
        end
    else
        helpTargetInfo.Text = "目標: 無"
        helpTargetInfo.TextColor3 = Color3.fromRGB(120, 120, 120)
        values.targetPlayer = nil
        values.fixedCFrame = nil
        
        if connections.helpTarget then
            connections.helpTarget:Disconnect()
            connections.helpTarget = nil
        end
    end
    
    toggleUIState(helpTargetButton, helpTargetFrame, helpTargetInput, toggles.helpTarget)
end)

-- 設定距離
helpDistanceInput.FocusLost:Connect(function()
    local val = tonumber(helpDistanceInput.Text)
    if val and val > 0 then
        values.helpDistance = val
    else
        helpDistanceInput.Text = tostring(values.helpDistance)
    end
end)

-- 傳送後固定 (預設開啟)
fixedPositionButton.MouseButton1Click:Connect(function()
    toggles.fixedPosition = not toggles.fixedPosition
    
    if toggles.fixedPosition then
        fixedPositionStatus.Text = "啟用"
        fixedPositionStatus.TextColor3 = Color3.fromRGB(46, 125, 50)
        
        -- 如果幫助目標正在運行,切換到固定模式
        if toggles.helpTarget and values.targetPlayer then
            -- 斷開舊連接
            if connections.helpTarget then
                connections.helpTarget:Disconnect()
            end
            
            -- 獲取當前位置或目標位置
            local myChar = player.Character
            if myChar and myChar:FindFirstChild("HumanoidRootPart") then
                if not values.fixedCFrame then
                    values.fixedCFrame = myChar.HumanoidRootPart.CFrame
                end
                
                -- 建立固定位置連接
                connections.helpTarget = RunService.Heartbeat:Connect(function()
                    if not toggles.helpTarget then return end
                    
                    local myChar = player.Character
                    if myChar and myChar:FindFirstChild("HumanoidRootPart") and values.fixedCFrame then
                        myChar.HumanoidRootPart.CFrame = values.fixedCFrame
                    end
                end)
            end
        end
    else
        fixedPositionStatus.Text = "關閉"
        fixedPositionStatus.TextColor3 = Color3.fromRGB(150, 150, 150)
        values.fixedCFrame = nil
        
        -- 如果幫助目標正在運行,切換到跟隨模式
        if toggles.helpTarget and values.targetPlayer then
            -- 斷開舊連接
            if connections.helpTarget then
                connections.helpTarget:Disconnect()
            end
            
            -- 建立跟隨連接
            connections.helpTarget = RunService.Heartbeat:Connect(function()
                if not toggles.helpTarget or not values.targetPlayer then return end
                
                local myChar = player.Character
                if not myChar or not myChar:FindFirstChild("HumanoidRootPart") then return end
                
                local targetCFrame = getPositionInFrontOfPlayer(values.targetPlayer, values.helpDistance)
                if targetCFrame then
                    myChar.HumanoidRootPart.CFrame = targetCFrame
                end
            end)
        end
    end
    
    toggleUIState(fixedPositionButton, fixedPositionFrame, fixedPositionStatus, toggles.fixedPosition)
end)

-- 初始化固定位置按鈕為開啟狀態
fixedPositionStatus.Text = "啟用"
fixedPositionStatus.TextColor3 = Color3.fromRGB(46, 125, 50)
toggleUIState(fixedPositionButton, fixedPositionFrame, fixedPositionStatus, true)

-- 死後回場 (改進版本)
respawnTeleportButton.MouseButton1Click:Connect(function()
    toggles.respawnTeleport = not toggles.respawnTeleport
    
    if toggles.respawnTeleport then
        respawnTeleportStatus.Text = "監控中"
        respawnTeleportStatus.TextColor3 = Color3.fromRGB(46, 125, 50)
        
        -- 監控死亡的函數
        local function startDeathMonitor()
            local deathConnection
            deathConnection = RunService.Heartbeat:Connect(function()
                if not toggles.respawnTeleport then 
                    if deathConnection then deathConnection:Disconnect() end
                    return 
                end
                
                local char = player.Character
                if char and char:FindFirstChild("Humanoid") then
                    local hum = char.Humanoid
                    if hum.Health <= 0 then
                        -- 角色死亡,暫停監控避免重複觸發
                        deathConnection:Disconnect()
                        
                        -- 啟動死後回場流程
                        task.spawn(function()
                            -- 等待4秒
                            task.wait(4)
                            
                            if not toggles.respawnTeleport then return end
                            
                            -- 確保角色已重生
                            local newChar = player.Character
                            if newChar and newChar:FindFirstChild("HumanoidRootPart") then
                                -- 步驟1: 傳送到 Teleport1
                                teleportToLobby()
                                print("已傳送到Teleport1")
                                
                                -- 等待0.1秒
                                task.wait(0.1)
                                
                                if not toggles.respawnTeleport then return end
                                
                                -- 步驟2: 如果幫助目標還在運行,傳送到對應位置
                                if toggles.helpTarget and values.targetPlayer then
                                    if toggles.fixedPosition and values.fixedCFrame then
                                        -- 固定模式: 傳送到固定位置
                                        newChar.HumanoidRootPart.CFrame = values.fixedCFrame
                                        print("已傳送到固定位置")
                                    else
                                        -- 跟隨模式: 傳送到目標當前位置
                                        local targetCFrame = getPositionInFrontOfPlayer(values.targetPlayer, values.helpDistance)
                                        if targetCFrame and newChar:FindFirstChild("HumanoidRootPart") then
                                            newChar.HumanoidRootPart.CFrame = targetCFrame
                                            print("已傳送到幫助目標位置")
                                        end
                                    end
                                end
                            end
                            
                            -- 重新啟動監控
                            if toggles.respawnTeleport then
                                task.wait(0.5)
                                startDeathMonitor()
                            end
                        end)
                    end
                end
            end)
            
            connections.respawnTeleport = deathConnection
        end
        
        -- 啟動監控
        startDeathMonitor()
    else
        respawnTeleportStatus.Text = "關閉"
        respawnTeleportStatus.TextColor3 = Color3.fromRGB(150, 150, 150)
        
        if connections.respawnTeleport then
            connections.respawnTeleport:Disconnect()
            connections.respawnTeleport = nil
        end
    end
    
    toggleUIState(respawnTeleportButton, respawnTeleportFrame, respawnTeleportStatus, toggles.respawnTeleport)
end)

-- 拖曳功能
local function enableDrag(frame, dragHandle)
    local dragging = false
    local dragInput, dragStart, startPos
    
    local function update(input)
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(
            startPos.X.Scale, startPos.X.Offset + delta.X,
            startPos.Y.Scale, startPos.Y.Offset + delta.Y
        )
    end
    
    dragHandle.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    dragHandle.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or 
           input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            update(input)
        end
    end)
end

enableDrag(mainFrame, titleBar)

