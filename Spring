local function parentUI(g)
    local ok = pcall(function()
        if gethui then g.Parent = gethui()
        elseif CoreGui then g.Parent = CoreGui
        else g.Parent = playerGui end
    end)
    if not ok then g.Parent = playerGui end
end
parentUI(screenGui)

